{
  "name": "svg-icon-baker-monorepo",
  "version": "0.2.0",
  "private": true,
  "bugs": {
    "url": "https://github.com/yangxu52/svg-icon-baker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yangxu52/svg-icon-baker.git"
  },
  "license": "MIT",
  "author": "yangxu52",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -filter svg-icon-baker run build",
    "dev": "pnpm -filter svg-icon-baker run dev",
    "test": "pnpm -filter svg-icon-baker run test",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "tsc": "tsc --noEmit --skipLibCheck",
    "release": "node scripts/release.mjs"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "conventional-changelog": "^7.1.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
